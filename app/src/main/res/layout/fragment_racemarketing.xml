<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="交易会名称"
            android:gravity="center"
            android:background="@color/black_888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <TextView
            android:gravity="center"
            android:maxLines="1"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <TextView
            android:text="所属市场"
            android:background="@color/black_888888"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/matket"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

        <TextView
            android:background="@color/black_888888"
            android:gravity="center"
            android:text="单前交易节"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/jie"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:gravity="center"
            android:text="交易状态"
            android:background="@color/black_888888"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <TextView
            android:gravity="center"
            android:id="@+id/state"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />



    </LinearLayout>


</LinearLayout>